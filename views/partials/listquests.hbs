<table class="ui fixed table">
  <thead>
    <tr>
      <th>Quest</th>
      <th>Faction</th>
      <th>Reward</th>
      <th>Remove</th>
    </tr>
  </thead>
  <tbody>
    {{#each questlist.quests}}
      <tr>
        <td>
          {{quest}}
        </td>
        <td>
          {{faction}}
        </td>
        <td>
          {{reward}}
        </td>        
        <td>
          {{remove}}
         <a href="/questlist/{{../questlist.id}}/deleteQuest/{{id}}" class="ui tiny red button">Delete Quest</a></td>
      </tr>
    {{/each}}
  </tbody>
</table>